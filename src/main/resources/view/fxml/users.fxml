<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="600.0" maxWidth="900.0" minHeight="600.0" minWidth="900.0" styleClass="paneBlueDark" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.controller.UsersController">
   <children>
      <AnchorPane maxHeight="50.0" minHeight="50.0" styleClass="paneBlueLight" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
         <children>
            <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label styleClass="textTitle" text="USUÁRIOS" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="10.0" layoutY="10.0" styleClass="paneBackground" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="54.0">
         <children>
            <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox maxHeight="40.0" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <AnchorPane styleClass="paneBlueDark" HBox.hgrow="ALWAYS">
                           <children>
                              <AnchorPane styleClass="paneWhite" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
                                 <children>
                                    <TextField fx:id="txtSearch" promptText="PESQUISE POR NOME, CPF, TELEFONE OU USUARIO" styleClass="input" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                 </children>
                              </AnchorPane>
                           </children>
                        </AnchorPane>
                     </children>
                  </HBox>
                  <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView id="tableUsers" fx:id="tableUsers" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                           <placeholder>
                              <Label text="Nenhum Usuário Encontrado" />
                           </placeholder>
                           <columns>
                              <TableColumn fx:id="userCode" maxWidth="1000.0" prefWidth="75.0" text="#" />
                              <TableColumn fx:id="userName" maxWidth="4000.0" prefWidth="75.0" text="NOME" />
                              <TableColumn fx:id="userDocument" maxWidth="3500.0" prefWidth="75.0" text="CPF" />
                              <TableColumn fx:id="userPhone" maxWidth="4500.0" prefWidth="75.0" text="TELEFONE" />
                              <TableColumn fx:id="userAction" maxWidth="2000.0" prefWidth="75.0" text="AÇÕES" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  <HBox maxHeight="40.0" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <AnchorPane prefWidth="500.0" styleClass="paneRedDark" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" onAction="#createUser" styleClass="btnGreen" text="CADASTRAR" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                        <AnchorPane prefWidth="500.0" styleClass="paneRedDark" HBox.hgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" onAction="#cancel" styleClass="btnRed" text="VOLTAR" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                           </children>
                        </AnchorPane>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </AnchorPane>
      <AnchorPane fx:id="waitScreen" layoutX="10.0" layoutY="10.0" styleClass="waitScreen" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
